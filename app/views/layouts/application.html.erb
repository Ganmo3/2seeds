<!DOCTYPE html>
<html>
  <head>
    <title>TwoSeeds</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5f9cac3054.js" crossorigin="anonymous"></script>
    <script src="https://rawgit.com/kimmobrunfeldt/progressbar.js/master/dist/progressbar.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
  </head>

  <body>
    <% if @show_header %>
      <%= render 'layouts/header' %>
    <% end %>
   
     <a href="#top" class="scroll-top-btn">
      <i class="fas fa-chevron-circle-up"></i>
    </a>
    <main>
      <%= content_tag :div, flash[:notice], class: "flash-message notice" if flash[:notice].present? %>
      <%= content_tag :div, flash[:alert], class: "flash-message alert" if flash[:alert].present? %>
      <%= content_tag :div, flash[:error], class: "flash-message error" if flash[:error].present? %>
      <%= content_tag :div, flash[:success], class: "flash-message success" if flash[:success].present? %>

      <%= yield %>
   
      <%= render 'chatbots/chatbot' %>
      <button type="button" class="chatbot-btn" data-toggle="modal" data-target="#chat-modal">
        <i class="fas fa-robot" data-toggle=tooltip data-placement="bottom" title="ボットにゃんと遊ぶ！"></i>
      </button>
    </main>
    <% if @show_footer %>
      <%= render 'layouts/footer' %>
    <% end %>
    

    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
  </body>
</html>
