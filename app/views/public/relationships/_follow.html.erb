<% if current_user.following?(@user) %>
  <%= link_to "フォロー外す", unfollow_user_path(@user.account), method: :delete, class: "btn btn-dark btn-sm", remote: true, data: { disable_with: "処理中..." } %>
<% else %>
  <%= link_to "フォローする", follow_user_path(@user.account), method: :post, class: "btn btn-outline-dark btn-sm", remote: true, data: { disable_with: "処理中..." } %>
<% end %>
