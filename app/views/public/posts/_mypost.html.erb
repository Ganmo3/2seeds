          <i class="fas fa-trash"></i>
        <% end %>
      </div>
    </div>

    <!-- 他の要素の表示と作成日または更新日の表示 -->
    <div class="d-flex justify-content-between align-items-center">
      <!-- 他の要素の表示 -->
      <% if post.status == 'draft' %>
        <button class="status-label draft">下書き</button>
      <% else %>
