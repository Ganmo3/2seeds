        <% end %>
        <% if post.comments.any? %>
          <p><i class="fas fa-comment"></i> <%= post.comments.count %></p>
        <% end %>
      <% end %>

      <!-- 作成日または更新日の表示 -->
      <p data-updated-at="<%= post.updated_at %>" data-created-at="<%= post.created_at %>" class="ml-auto"></p>
