<%= render 'public/shared/error_messages', object: @post %>
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <%= form_with model: @post do |f| %>
        <%= render partial: 'public/posts/form', locals: { f: f, post: @post } %>
      <% end %>
    </div>
  </div>
</div>
