<% if @post.favorited_by?(current_user) %>
  <%= link_to post_post_favorites_path(@post), method: :delete, remote: true, class: "post-card__like post-card__like--active" do %>
    <i class="fa fa-heart"></i> <%= @post.post_favorites.count %>
  <% end %>
<% else %>
  <%= link_to post_post_favorites_path(@post), method: :post, remote: true, class: "post-card__like" do %>
    <i class="far fa-heart"></i> <%= @post.post_favorites.count %>
  <% end %>
<% end %>
