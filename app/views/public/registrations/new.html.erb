<div class="container">
  <div class="row text-center">
    <h2 class="auth-form-title mx-auto mt-5 mb-3">Sign up</h2>
  </div>
  <div class="row text-center">
    <p class="mx-auto">すでにアカウントがありますか？<%= render "public/shared/links" %></p>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <% fields = [
      { attribute: :nickname, label: "表示名" },
      { attribute: :account, label: "アカウント名" },
      { attribute: :email, label: "メールアドレス" },
      { attribute: :password, label: "パスワード" },
      { attribute: :password_confirmation, label: "パスワード(確認用)" }
    ] %>

    <% fields.each do |field| %>
      <div class="d-flex justify-content-center flex-column">
        <div class="form-group mx-auto">
          <h6 class=""><%= field[:label] %></h6>
          <div class="flex items-center">
            <%= f.input field[:attribute], label: field[:label], autofocus: field[:attribute] == :nickname, class: 'form-control', label: false %>
          </div>
        </div>
      </div>
    <% end %>

    <div class="d-flex justify-content-center flex-column">
      <div class="form-group mx-auto">
        <%= f.submit "Sign up", class: 'auth-form__submit' %>
      </div>
    </div>

  <% end %>
</div>
