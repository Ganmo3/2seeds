<% if @results.present? %>
  <div class="row mt-3">
    <% @results.each do |tag| %>
      <% tag.taggings.each do |tagging| %>
        <% post = tagging.taggable %>
        <%= render partial: 'public/shared/post_item', locals: { post: post, isDetail: false } %>
      <% end %>
    <% end %>
  </div>
<% else %>
  <h1 class="hashtags__title">Hashtag not found</h1>
<% end %>
