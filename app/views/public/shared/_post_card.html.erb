<article class="post-card card border-0">
  <div class="post-card_creator">
    <div class="icon">
      <%= link_to user_path(post.user.account) do %>
        <%= user_icon_or_youtube(post.user.channel, size: '30x30', class: 'rounded-circle') %>
        <%= post.user.nickname %>
      <% end %>
    </div>
    <% if user_signed_in? && current_user != @user %>
      <div class=follow-btn id="follow-btn-card">
        <%= render "public/relationships/follow", user: @user %>
      </div>
    <% end %>


     <%= link_to post.title, post_path(post.id), class: 'post-card__username' %>
      <%= link_to "削除", post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
  </div>
  <ul class="post-card_stats">
    <li>
      <time class="post-card__date" datetime="<%= post.created_at %>"><%= formatted_datetime(post.created_at) %></time>
    </li>
    <% unless request.fullpath.include? "drafts" %>
      <li id="comments-count"  class="post-card__comments" <%= "data-toggle=tooltip" unless user_signed_in? || admin_signed_in? %>  data-placement="bottom" title="コメントをするには、ログインしてください。">
        <%= render partial: 'public/comments/comments_count', locals: { post: post } %>
      </li>
      <li id="favorites-<%= post.id %>" class="post-card__likes" <%= "data-toggle=tooltip" unless user_signed_in? || admin_signed_in? %> data-placement="bottom" title="いいねをするには、ログインしてください。">
        <%= render partial: 'public/post_favorites/post_favorite', locals: { post: post } %>
      </li>
      <li>
        <i class="fas fa-eye"></i>
         <%= post.impressionist_count %> Views
      </li>
    <% end %>
  </ul>
</article>
