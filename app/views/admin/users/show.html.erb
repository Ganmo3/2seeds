<div class="row justify-content-center align-items-center mb-4">
  <div class="col-md-4 text-center">
    <%= user_icon_or_youtube(@user, size: '40x40', class: 'rounded-circle cursor-pointer') %>
    <h4 class="mt-3"><strong><%= @user.nickname %></strong></h4>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-md-6">
    <h3 class="text-center">会員情報編集</h3>
    <div class="form-group text-center">
      <div class="mt-3">
        <strong>通報された回数：</strong>
        <%= Report.reported_count(@user.id) %>
      </div>
    </div>
    <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
      <div class="form-group text-center">
        <br>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :status, "active", id: "user_status_0", class: "custom-control-input" %>
          <%= f.label I18n.t("enums.user.status.active"), class: "custom-control-label", for: "user_status_0" %>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :status, "banned", id: "user_status_1", class: "custom-control-input" %>
          <%= f.label I18n.t("enums.user.status.banned"), class: "custom-control-label", for: "user_status_1" %>
        </div>
        <div class="custom-control custom-radio custom-control-inline">
          <%= f.radio_button :status, "inactive", id: "user_status_2", class: "custom-control-input" %>
          <%= f.label I18n.t("enums.user.status.inactive"), class: "custom-control-label", for: "user_status_2" %>
        </div>
      </div>
      <div class="form-group text-center">
        <%= f.submit "ステータスを更新", class: "btn btn-primary mx-auto",
        data: { confirm: "ステータスを更新して本当によろしいですか？" } %>
      </div>
    <% end %>
  </div>
</div>
<div class="text-center">
  <%= link_to "会員一覧へ",admin_users_path %> | <%= link_to "通報一覧へ",admin_root_path %>
</div>
