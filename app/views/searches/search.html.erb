<div class="container mt-5">
  <% if @model == 'user' %>
    <h3>Users search for "<%= @content %>"</h3>
    <% if @results.present? %>
      <% @results.each do |user| %>
        <%= render partial: 'public/users/profile-card', locals: { user: user }  %>
      <% end %>
    <% else %>
      <p>ユーザーの検索結果がありません</p>
    <% end %>
  <% elsif @model == 'post' %>
    <h3>Posts search for "<%= @content %>"</h3>
    <% if @results.present? %>
      <%= render partial: 'public/posts/index', locals: { posts: @results }  %>
    <% else %>
      <p>投稿の検索結果がありません</p>
    <% end %>
  <% elsif @model == 'tag' %>
    <h3>Tags search for "<%= @content %>"</h3>
    <% if @results.present? %>
      <% @results.each do |tag| %>
        <%= render partial: 'public/posts/index', locals: { posts: @results }  %>
      <% end %>
    <% else %>
      <p>タグの検索結果がありません</p>
    <% end %>
  <% else %>
    <h3>Search for "<%= @content %>"</h3>
    <% if @results.present? %>
      <% @results.each do |result| %>
        <% if result.is_a?(User) %>
          <h4>User</h4>
          <%= render partial: 'public/users/shared/profile-card', locals: { user: result } %>
        <% elsif result.is_a?(Post) %>
          <h4>Post</h4>
          <%= render partial: 'public/posts/index', locals: { posts: [result] } %>
        <% end %>
      <% end %>
    <% else %>
      <p>検索結果がありません</p>
    <% end %>
  <% end %>
</div>
